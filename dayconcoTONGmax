#include <bits/stdc++.h>
using namespace std;
int main()
{
    int t;cin >> t;
    while(t--){
    int n;cin >> n;
    int a[n+1],dp[n+1],dpm = a[0];
    for (int i = 0; i < n; i++) cin >> a[i];
    dp[0] = a[0];
    for (int i = 1; i < n; i++) {
        dp[i] = max(a[i], dp[i-1] + a[i]);
        dpm = max(dpm,dp[i]);
    }
    cout << dpm << endl;
    }
    return 0;
}

