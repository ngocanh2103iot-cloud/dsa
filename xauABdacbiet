#include <bits/stdc++.h>
using namespace std;
int n,k;
int a[1005];
bool ok;
void ktao() {
    for (int i = 1; i <= n; i++) a[i] = 0;
    ok = true;
}
void sinh() {
    int i = n;
    while (i > 0 && a[i] == 1) {
        a[i] = 0;
        i--;
    }
    if (i == 0) ok = false;
    else a[i] = 1;
}
bool check() {
    int countSegment = 0;
    int length = 0;
    for (int i = 1; i <= n; i++) {
        if (a[i] == 0) {
            length++;
        } else {
            if (length == k) countSegment++;
            length = 0;
        }
    }
    if (length == k) countSegment++;
    if (length > k) return false;
    return countSegment == 1;
}

int main() {
    cin >> n >>k;
    ktao();
    vector<string> res;
    while (ok) {
        if (check()) {
            string s = "";
            for (int i = 1; i <= n; i++)
                s += (a[i] == 1 ? 'B' : 'A');
            res.push_back(s);
        }
        sinh();
    }
    cout << res.size() << endl;
    for (auto &x : res)
        cout << x << "\n";
    return 0;
}
